{
  "$schema": "https://json.schemastore.org/eslintrc.json",
  "env": {
    "browser": true,
    "es2021": true
  },

  "extends": [
    "eslint:recommended",
    "plugin:sonarjs/recommended"
    // "plugin:prettier/recommended"
  ],

  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },

  "plugins": ["sonarjs"],

  "root": true,

  "rules": {
    "strict": 2
  }
}
